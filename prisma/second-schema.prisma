// prisma/second-schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../generated/second" 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id      Int    @id @default(autoincrement())
  name    String
  email   String @unique
  address String
}

model Book {
  id       Int    @id @default(autoincrement())
  title    String
  isbn     String @unique
  authorId Int
}
